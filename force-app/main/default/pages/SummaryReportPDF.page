<apex:page controller="SummaryReportPDFController"
           renderAs="pdf"
           showHeader="false"
           applyHtmlTag="false"
           applyBodyTag="false">    

    <html>
        <head>
            <style>
                body {
                    font-family: Arial, sans-serif;
                    font-size: 12px;
                }
                h2 {
                    text-align: center;
                }
                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 20px;
                }
                th, td {
                    border: 1px solid #333;
                    padding: 8px;
                }
                th {
                    background-color: #f2f2f2;
                }
            </style>
        </head>

        <body>
            <h2>Summary Report</h2>

            <p>
                <b>From:</b> {!fromDateStr}
                &nbsp;&nbsp;
                <b>To:</b> {!toDateStr}
            </p>

            <table>
                <tr>
                    <th>#</th>
                    <th>Report Name</th>
                    <th>Count</th>
                </tr>

                <apex:variable var="i" value="{!1}" />

                <apex:repeat value="{!summaryList}" var="row">
                    <tr>
                        <td>{!i}</td>
                        <td>{!row.reportName}</td>
                        <td>{!row.count}</td>
                    </tr>
                    <apex:variable var="i" value="{!i + 1}" />
                </apex:repeat>
            </table>

            <br/>
            <p><b>Generated On:</b> {!generatedOn}</p>
        </body>
    </html>

</apex:page>