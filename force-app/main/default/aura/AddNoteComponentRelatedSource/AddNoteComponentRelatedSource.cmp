<aura:component controller="AddRelatedSourceNoteController" 
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" 
                access="global" >
    <aura:attribute name="leadId" type="String" />
    <aura:attribute name="newNote" type="String" />
    <aura:attribute name="ShowRecords" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.DisplayNotes}" />
    
    <aura:html tag="style">
        .slds-modal__container { 
            max-width: 50rem !important;
            width: 75% !important;
            margin: 0 auto; 
            overflow: hidden; 
        } 
        .cuf-content {
            padding: 0 !important;
        }
        .slds-p-around--medium {
            padding: 0 !important;
        }
        .slds-modal__content {
            height: unset !important;
            max-height: unset !important;
        }
        .closeIcon {
            display: none;
        }
        .slds-col {
            margin-left: 15px;
        }
        .note-container {
            word-wrap: break-word; 
            overflow: hidden; 
            padding: 10px; 
        }
        .note-item {
            text-align: left; 
            margin-bottom: 10px; 
            padding: 15px;
            background: #f4f6f9; 
            border: 1px solid #dddbda; 
            border-radius: 8px; 
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
            white-space: pre-wrap; 
            line-height: 1.5; 
        }
        .custom-round-button {
            margin: 5px; 
            border-radius: 8px;
            font-size: 12px; /* Reduced font size */
        }
        .button-container {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }
        .note-header {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #0070d2;
            margin-bottom: 20px;
        }
        .note-input-container {
            margin-bottom: 20px;
            height: 100%;
        }
        .note-input-container label {
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
            margin-top: 20px; /* Added space before the label */
        }
        .note-input-container lightning-textarea {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            border: 1px solid #dddbda;
            margin: 0;
        }
        .full-height {
            height: 100%;
            margin: 0;
            padding: 0;
        }
      
        @media only screen and (max-width: 768px) {
            .slds-modal__container {
                width: 90% !important; 
            }
            .note-item {
                font-size: 14px; 
            }
        }
    </aura:html>
    
    <lightning:card class="full-height">
        <div class="note-header">
            -: All Call Summary :-
        </div>
        
        <div class="button-container">
            <lightning:button class="custom-round-button slds-button slds-button--destructive" 
                             label="Clear Call Summary" 
                             onclick="{!c.Clear}" /> 
            <lightning:button class="custom-round-button slds-button slds-button--brand"
                             label="Add Call Summary" 
                             onclick="{!c.addNote}"/>
        </div>
        
        <div class="note-input-container full-height">
            <label ><b style="padding-left:6px">Please Enter Call Summary:</b></label>
            <lightning:textarea value="{!v.newNote}" placeholder="Type Here ..." class="full-height" />
        </div>
        
        <div class="note-container">
            <aura:iteration items="{!v.ShowRecords}" var="note">
                <div class="note-item">
                    <p>{!note}</p>
                </div>
            </aura:iteration>
        </div>
    </lightning:card>  
</aura:component>